# Docker/PostgreSQL Configuration (used by docker-compose)
POSTGRES_USER=clinic_user
POSTGRES_PASSWORD=changeme_in_production
POSTGRES_DB=clinic_ai
POSTGRES_PORT=5433

# Database Configuration (application connection string)
DATABASE_URL=postgresql://clinic_user:changeme_in_production@localhost:5433/clinic_ai

# LLM Configuration (OpenRouter)
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=openai/gpt-4o-mini

# Research API Configuration
NCBI_EMAIL=your_email@domain.com
NCBI_API_KEY=optional_ncbi_api_key

# Epic FHIR Configuration (Sandbox)
EPIC_CLIENT_ID=your_client_id
EPIC_FHIR_BASE_URL=https://fhir.epic.com/interconnect-fhir-oauth/api/FHIR/R4
EPIC_TOKEN_URL=https://fhir.epic.com/interconnect-fhir-oauth/oauth2/token

# Cerner FHIR Configuration (Optional)
CERNER_CLIENT_ID=
CERNER_FHIR_BASE_URL=

# Mirth Connect (Optional)
MIRTH_HOST=localhost
MIRTH_PORT=8443
MIRTH_USERNAME=admin
MIRTH_PASSWORD=admin

# Security
ENCRYPTION_KEY=generate_with_fernet_key_command
JWT_SECRET_KEY=generate_secure_random_string
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# HIPAA Compliance
AUDIT_LOG_RETENTION_YEARS=6
PHI_ENCRYPTION_ENABLED=true
